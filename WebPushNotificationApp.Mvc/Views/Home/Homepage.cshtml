@{
    Layout = "_Layout"; 
}
<head>
    <link rel="stylesheet" href="~/css/Homepage.css"/>
</head>

<h1 style="text-align:center;">Welcome to ChatMaster!</h1>
<hr />
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block slide-1" src="~/images/screenshots/public-chat.png" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h4>Public chat</h4>
                <h5>Here you can chat with everyone else</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block slide-2" src="~/images/screenshots/public-chat-phone-screen.png" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h4>On smaller screens</h4>
                <h5>Chat on your phone while on the run</h5>
            </div>
        </div>
        <div class="carousel-item">
            <div class="carousel-caption d-none d-md-block">
                <h4>Notification</h4>
                <h5>Never miss a chat message with notifications</h5>
            </div>
            <img class="d-block slide-3" src="~/images/screenshots/show-notification.png" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block slide-4" src="~/images/logo-ChatMaster2.jpg" alt="Forth slide">
            <div class="carousel-caption d-none d-md-block">
                <h4>Login</h4>
                <h5>To try it out</h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
