<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChatMaster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/WebPushNotificationApp.Mvc.styles.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.json" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <header>
    <button class="navbar-toggler" type="button" aria-label="Toggle navigation" id="navbarToggleButton">
        <span class="navbar-toggler-icon"></span>
    </button>
    <nav id="navbar" class="navbar navbar-light border-bottom box-shadow mb-3">

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="logo-button">
                <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapseLogo" aria-expanded="false" aria-controls="collapseExample">
                    <img src="~/images/logo-ChatMaster2.jpg" class="img-nav" style="max-width: 90px; height: auto; border-radius:15px;" />
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="collapse" id="collapseLogo" hidden>
                        <div class="card card-body">
                        <button id="installPWA" class="btn btn-primary">Install app</button>
                        </div>
                    </div>
                }
            </div>
            <ul class="navbar-nav flex-grow-1">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-link">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Public Chat</a>
                    </li>

                }
                else
                {
                    <li class="nav-link">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Homepage">Home</a>
                    </li>
                }
                <li class="nav-link">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
                                @if (User.Identity.IsAuthenticated)
                {
                    <div class="notification-settings">
                        <a href="javascript:void(0);" class="text-dark" id="notification-settings-link">Notification Settings</a>
                        <div id="notification-settings-container" class="collapse">
                            <partial name="_SettingsPartial" />
                        </div>
                    </div>
                }

            </ul>
            <div class="partial-container">

                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ChatMaster
        </div>
    </footer>

<script>
    document.getElementById("navbarToggleButton").addEventListener("click", function () {
        var navbar = document.getElementById("navbar");
        navbar.classList.toggle("show");
    });
</script>
<script>
    $(document).ready(function() {
        $('#notification-settings-link').on('click', function() {
            $('#notification-settings-container').toggleClass('collapse');
        });
    });
</script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
