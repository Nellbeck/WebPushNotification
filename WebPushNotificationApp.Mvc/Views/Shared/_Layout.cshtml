<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChatMaster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/WebPushNotificationApp.Mvc.styles.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.json" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    @*logo collapse button*@
                    <p class="d-inline-flex flex-column gap-1">
                        <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapseLogo" aria-expanded="false" aria-controls="collapseExample">
                            <img src="~/images/logo-ChatMaster2.jpg" class="img-nav" style="max-width: 60px; height: auto; border-radius:15px;" />
                        </button>
                    </p>
                    @if(User.Identity.IsAuthenticated)
                    {
                        <div class="collapse" id="collapseLogo" hidden>
                            <div class="card card-body">
                            <button id="installPWA" class="btn btn-primary">Install app</button>
                            </div>
                        </div>
                    }

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav flex-grow-1">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-link">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Public Chat</a>
                            </li>
                            <li class="nav-link">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Notifications" asp-action="Settings">Notification Settings</a>
                            </li>
                            }
                        else
                        {
                            <li class="nav-link">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Homepage">Home</a>
                            </li>
                        }
                            <li class="nav-link">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                            </li>
                        </ul>

                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ChatMaster
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
